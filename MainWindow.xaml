<Window x:Class="flashcardsCsRewrite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:flashcardsCsRewrite"
        mc:Ignorable="d"
        Title="Flashcards" Height="600" Width="400" MinHeight="600" MinWidth="400">
    <Grid>
        <TextBlock Text="FlashCards" FontSize="50" HorizontalAlignment="Center"/>
        <TextBlock Text="" Name="Question" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, 0, 0, 100" Width="350" TextAlignment="Center"/>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Name="Answer"
                 Text="" VerticalAlignment="Center" Width="150" 
                 Height="27" FontSize="18" TextAlignment="Center"/>
        <Button Name="submit" Height="25" Width="100" Content="submit"
                VerticalAlignment="Center" HorizontalAlignment="Center" 
                Margin="0, 100, 0, 0" Click="submit_Click"/>
    </Grid>
</Window>
